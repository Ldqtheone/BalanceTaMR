{% extends 'base.html.twig' %}

{% block title %}Hello MergeRequestController!{% endblock %}

{% block body %}

    <div class="container-sm">

        <h1>{{ infos.title }}</h1>
        <div class="row justify-content-start align-items-center">
            <div class="col d-flex align-items-center">
                <img src="{{ infos.author.avatar_url }}" class="img-fluid rounded h-50 w-50 mr-10"
                     alt="Photo de profil du crÃ©ateur"> {{ infos.author.name }}
            </div>

            <div class="col d-flex align-items-center">
                <i class="fa fa-clock-o mr-5"
                   aria-hidden="true"></i> {{ infos.created_at|date('Y-m-d H:i') }}
            </div>

            <div class="col">
                <div class="badge-group" role="group">
                    <span class="badge  badge-primary badge-pill">
                        {{ infos.web_url|split('/',6)[4] }}
                    </span>
                </div>
            </div>

            <div class="col">
                <span class="badge-group" role="group">
                    <span class="badge" data-toggle="tooltip" data-title="Commentaires">
                        <i class="fas fa-comments"></i> {{ infos.user_notes_count }}
                    </span>
                    <span class="badge badge-success" data-toggle="tooltip" data-title="Upvotes">
                        <i class="fas fa-thumbs-up"></i> {{ infos.upvotes }}
                    </span>
                    <span class="badge badge-danger" data-toggle="tooltip" data-title="Downvotes">
                          <i class="fas fa-thumbs-down"></i> {{ infos.downvotes }}
                    </span>
                </span>
            </div>

            <div class="col">
                <a href="{{ infos.web_url }}" data-toggle="tooltip" data-title="Ouvrir sur GitLab" target="_blank" class="btn btn-square btn-lg btn-secondary" role="button">
                    <i class="fab fa-gitlab fa-1x" aria-hidden="true"></i>
                </a>
            </div>
        </div>


        {% if infos.labels is defined %}
            <div class="row justify-content-start align-items-center mt-5">
                <span class="mr-5">Tags : </span>
                {% for label in infos.labels %}
                    <span class="badge m-5">{{ label }}</span>
                {% endfor %}
            </div>
        {% endif %}

        {% if infos.description %}
            <h2 class="content-title mt-10">
                Description
            </h2>
            <p>
                {{ infos.description }}
            </p>
        {% endif %}
    </div>

{% endblock %}
