{% extends 'base.html.twig' %}

{% block title %}#BalanceTaMR - {{ team.name }}{% endblock %}

{% block navbar %}
    <a href="{{ path('team_edit', {'id': team.id}) }}" class="btn btn-link" role="button" title="{{ team.name }}">
        <img src="{{ team.pictureUrl }}" class="img-fluid rounded-circle" alt="rounded circle image"
             style="height: 100%">
    </a>
{% endblock %}

{% block body %}
    <div class="container-sm">
        <h1>Dashboard</h1>
        {% for project in projects %}
            {% for mr in project %}
                <span>{{ mr.title }}</span>
                <a href="{{ path('merge_request', {'slug' : mr|merge({'element': 'value'})}) }}" class="btn btn-link" role="button">Voir</a>
            {% endfor %}
        {% endfor %}
    </div>
{% endblock %}
